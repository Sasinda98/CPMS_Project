<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="8dp"
    >

    <!-- row1-->
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/backgroundLight"
        app:cardElevation="8dp"
        app:cardCornerRadius="4dp"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_margin="16dp"
            android:orientation="horizontal"
            >

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/item_row_image"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@drawable/gayal"
                android:elevation="4dp"

                app:civ_border_color="#BDBDBD"
                app:civ_border_width="1dp"

                />


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <TextView
                    android:id="@+id/lm_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:textSize="25sp"
                    android:text="Gayal Sasinda"
                    android:textColor="#212121"
                    android:textAlignment="center" />

                <TextView
                    android:id="@+id/lm_role"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:textSize="12sp"
                    android:text="Project Manager"
                    android:textColor="#616161"
                    android:textAlignment="center" />

                <TextView
                    android:id="@+id/lm_latestMessge"
                    android:layout_marginTop="12dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:textSize="14sp"
                    android:text="You : Okay we'll get that sorted as s...."
                    android:textColor="#424242"
                    android:textAlignment="center" />


            </LinearLayout>


        </LinearLayout>

        <!--Time stamp-->
        <TextView
            android:id="@+id/lm_timeStamp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:text="12:30pm"
            android:textColor="#757575"
            android:layout_gravity="right|top"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"
            />

        <!--deliver status stamp-->
        <TextView
            android:id="@+id/lm_deliverStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:text="Delivered"
            android:textColor="#757575"
            android:layout_gravity="right|bottom"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="8dp"
            />


    </android.support.v7.widget.CardView>


</LinearLayout>